<div class='basic_form'>
<h1> Create a New Album </h1>
<%= form_for [@profile, @album] do |f| %>
    <div class="form_line">
        <%= f.label :name, "Album Name:" %><br>
            <div class="form_controls">
                <%= f.text_field :name %><br>
            </div>
    </div>
    <div class="form_line">
        <%= f.label :description, "Description:" %><br>
            <div class="form_controls">
                <%= f.text_area :description %><br>
            </div>
    </div>
        <div class="form_controls">
            <%= hidden_field_tag "album[profile_id]", @profile.id %><br>
        </div>
    <div class="form_line">
        <%= f.label :add_existing_photos, "Add Existing Photos:" %><br>
            <div class="form_controls">
                <%= collection_check_boxes(:album, :photo_ids, @photos, :id, :image) do |b| %>
                <p>
                <%= b.check_box + cl_image_tag(b.object.image.model.image)%>
                </p>    
            </div>
        </div>
        <%end%> 
        <div class="form_line">
            <div class="form_controls">
                <%= f.submit %>
                <% if @error %><span class="error"><%= @error %></span><% end %>
            </div>
        </div>
    <%end%>
    </div>

